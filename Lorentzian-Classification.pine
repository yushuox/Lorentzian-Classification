alertcondition(startLongTrade, title='Open Long â–²', message='LDC Open Long â–² | {{ticker}}@{{close}} | ({{interval}})')
alertcondition(endLongTrade, title='Close Long â–²', message='LDC Close Long â–² | {{ticker}}@{{close}} | ({{interval}})')
alertcondition(startShortTrade, title='Open Short â–¼', message='LDC Open Short  | {{ticker}}@{{close}} | ({{interval}})')
alertcondition(endShortTrade, title='Close Short â–¼', message='LDC Close Short â–¼ | {{ticker}}@{{close}} | ({{interval}})')

// Combined Alerts for Entries and Exits
alertcondition(startShortTrade or startLongTrade, title='Open Position â–²â–¼', message='LDC Open Position â–²â–¼ | {{ticker}}@{{close}} | ({{interval}})')
alertcondition(endShortTrade or endLongTrade, title='Close Position â–²â–¼', message='LDC Close Position  â–²â–¼ | {{ticker}}@[{{close}}] | ({{interval}})')

// Kernel Estimate Alerts
alertcondition(condition=alertBullish, title='Kernel Bullish Color Change', message='LDC Kernel Bullish â–² | {{ticker}}@{{close}} | ({{interval}})')
alertcondition(condition=alertBearish, title='Kernel Bearish Color Change', message='LDC Kernel Bearish â–¼ | {{ticker}}@{{close}} | ({{interval}})')

// =========================
